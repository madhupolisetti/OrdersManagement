<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <log4net>
    <appender name="defaultAppender" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="OrdersLogs\%property{LogName}.txt"/>
      <appendToFile value="true"/>
      <rollingStyle value="Size"/>
      <maximumFileSize value="4096KB"/>
      <maxSizeRollBackups value="1000"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{dd/MM/yyyy hh:mm:ss tt} [%thread] %-5level %logger  - %message%newline"/>
      </layout>
    </appender>
    <root>
      <level value="INFO"/>
      <appender-ref ref="defaultAppender"/>
    </root>
  </log4net>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
  <connectionStrings>
    <add name="OrdersDbConnectionString" connectionString="Persist Security Info=False;User ID=sa;Password=BlueKiteBrandNew;Initial Catalog=Orders;Data Source=192.168.75.9;pooling=true;Min Pool Size=10;Max Pool Size=200"/>
  </connectionStrings>
</configuration>